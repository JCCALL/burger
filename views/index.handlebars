<h1>Burgers!</h1>
<img src="/img/burger.png">
<div id="noteaten">
    <h2>Burgers waiting to be devoured!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li class="waiting">
            <h3>{{burger_name}}</h3>
            <button class="eat" id="{{id}}">
                DEVOUR IT!
            </button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div id="eaten">
    <h2>Burgers already Eaten</h2>
    <ul id="gone">
        {{#each burgers}}
        {{#if devoured}}
        <li class="yum">
            <h3>{{burger_name}}</h3>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<div id="form">
    <h2>New Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="burger_name">
        </div>
        <button class="button" type="submit">Add Burger</button>
    </form>
</div>